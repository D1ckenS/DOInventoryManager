<Application x:Class="DOInventoryManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DOInventoryManager"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Include the modern theme system -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/AppTheme.xaml"/>
                <ResourceDictionary Source="Themes/ScrollBarStyles.xaml"/>
                <ResourceDictionary Source="Themes/ModernDataGrid.xaml"/>
                <ResourceDictionary Source="Themes/ResponsiveDataGrid.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Global Text Rendering Settings -->
            <Style TargetType="{x:Type FrameworkElement}">
                <Setter Property="UseLayoutRounding" Value="True"/>
                <Setter Property="RenderOptions.ClearTypeHint" Value="Enabled"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
