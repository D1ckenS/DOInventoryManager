<UserControl x:Class="DOInventoryManager.Views.Print.MonthlySummaryPrint"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
        <StackPanel Margin="15">

            <!-- Report Title -->
            <TextBlock x:Name="ReportTitleText" Text="Monthly Summary Report" 
                      FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" 
                      Margin="0,0,0,15" Foreground="Black"/>

            <!-- KPI Summary Cards -->
            <Border BorderBrush="Black" BorderThickness="1" Margin="0,0,0,15">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="Total Consumption" FontWeight="SemiBold" FontSize="10" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TotalConsumptionText" Text="0 L" FontSize="12" FontWeight="Bold" 
                                 HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="Legs Completed" FontWeight="SemiBold" FontSize="10" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TotalLegsText" Text="0" FontSize="12" FontWeight="Bold" 
                                 HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock Text="Total Purchases" FontWeight="SemiBold" FontSize="10" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TotalPurchasesText" Text="$0.00" FontSize="12" FontWeight="Bold" 
                                 HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                        <TextBlock Text="Efficiency" FontWeight="SemiBold" FontSize="10" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="EfficiencyText" Text="0 L/leg" FontSize="12" FontWeight="Bold" 
                                 HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Two Column Layout for Tables -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Consumption Summary (Left Column) -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Consumption Summary by Vessel" 
                          FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="Black"/>
                <Border Grid.Row="1" Grid.Column="0" BorderBrush="Black" BorderThickness="1">
                    <DataGrid x:Name="ConsumptionDataGrid" AutoGenerateColumns="False" 
                             IsReadOnly="True" HeadersVisibility="Column"
                             GridLinesVisibility="All" BorderThickness="0"
                             Background="White" Foreground="Black"
                             FontSize="8" MaxHeight="150">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Vessel" Binding="{Binding VesselName}" Width="80"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding VesselType}" Width="50"/>
                            <DataGridTextColumn Header="Consumption (L)" Binding="{Binding TotalConsumptionL, StringFormat=N3}" Width="80"/>
                            <DataGridTextColumn Header="Legs" Binding="{Binding TotalLegs}" Width="40"/>
                            <DataGridTextColumn Header="L/Leg" Binding="{Binding AvgConsumptionPerLegL, StringFormat=N3}" Width="50"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <!-- Purchase Summary (Right Column) -->
                <TextBlock Grid.Row="0" Grid.Column="2" Text="Purchase Summary by Supplier" 
                          FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="Black"/>
                <Border Grid.Row="1" Grid.Column="2" BorderBrush="Black" BorderThickness="1">
                    <DataGrid x:Name="PurchaseDataGrid" AutoGenerateColumns="False" 
                             IsReadOnly="True" HeadersVisibility="Column"
                             GridLinesVisibility="All" BorderThickness="0"
                             Background="White" Foreground="Black"
                             FontSize="8" MaxHeight="150">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Supplier" Binding="{Binding SupplierName}" Width="80"/>
                            <DataGridTextColumn Header="Currency" Binding="{Binding Currency}" Width="50"/>
                            <DataGridTextColumn Header="Quantity (L)" Binding="{Binding TotalPurchasesL, StringFormat=N3}" Width="70"/>
                            <DataGridTextColumn Header="Value (USD)" Binding="{Binding TotalValueUSD, StringFormat=C2}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <!-- FIFO Allocation Summary (Left Column, Row 2) -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="FIFO Allocation Summary" 
                          FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="Black"/>
                <Border Grid.Row="4" Grid.Column="0" BorderBrush="Black" BorderThickness="1">
                    <StackPanel Margin="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Text="Total Allocations: " FontWeight="SemiBold" FontSize="9"/>
                                <TextBlock x:Name="TotalAllocationsText" Text="0" FontSize="9"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,2,0,0">
                                <TextBlock Text="Allocated Quantity: " FontWeight="SemiBold" FontSize="9"/>
                                <TextBlock x:Name="AllocatedQuantityText" Text="0.000 L" FontSize="9"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,2,0,0">
                                <TextBlock Text="Allocated Value (USD): " FontWeight="SemiBold" FontSize="9"/>
                                <TextBlock x:Name="AllocatedValueText" Text="$0.00" FontSize="9"/>
                            </StackPanel>

                            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,2,0,0">
                                <TextBlock Text="Vessels Processed: " FontWeight="SemiBold" FontSize="9"/>
                                <TextBlock x:Name="VesselsProcessedText" Text="0" FontSize="9"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Financial Summary (Right Column, Row 2) -->
                <TextBlock Grid.Row="3" Grid.Column="2" Text="Financial Summary" 
                          FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="Black"/>
                <Border Grid.Row="4" Grid.Column="2" BorderBrush="Black" BorderThickness="1">
                    <StackPanel Margin="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Text="Total Purchase Value: " FontWeight="SemiBold" FontSize="9"/>
                                <TextBlock x:Name="TotalPurchaseValueText" Text="$0.00" FontSize="9"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,2,0,0">
                                <TextBlock Text="Total Consumption Value: " FontWeight="SemiBold" FontSize="9"/>
                                <TextBlock x:Name="TotalConsumptionValueText" Text="$0.00" FontSize="9"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,2,0,0">
                                <TextBlock Text="Remaining Inventory Value: " FontWeight="SemiBold" FontSize="9"/>
                                <TextBlock x:Name="RemainingInventoryValueText" Text="$0.00" FontSize="9"/>
                            </StackPanel>

                            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,2,0,0">
                                <TextBlock Text="Total Outstanding: " FontWeight="SemiBold" FontSize="9"/>
                                <TextBlock x:Name="TotalOutstandingText" Text="$0.00" FontSize="9"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>

        </StackPanel>
    </ScrollViewer>
</UserControl>