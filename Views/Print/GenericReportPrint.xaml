<UserControl x:Class="DOInventoryManager.Views.Print.GenericReportPrint"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
        <StackPanel Margin="20">

            <!-- Report Title -->
            <TextBlock x:Name="ReportTitleText" Text="Report" 
                      FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" 
                      Margin="0,0,0,20" Foreground="Black"/>

            <!-- Summary Cards Section -->
            <Border x:Name="SummarySection" BorderBrush="Black" BorderThickness="1" 
                   Padding="15" Margin="0,0,0,20" Visibility="Collapsed">
                <StackPanel x:Name="SummaryCardsPanel">
                    <!-- Summary cards will be added dynamically -->
                </StackPanel>
            </Border>

            <!-- Main Content Section -->
            <StackPanel x:Name="MainContentPanel">
                <!-- Main content will be added dynamically -->
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>