<UserControl x:Class="DOInventoryManager.Views.Print.VesselAccountPrint"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Account Summary Cards -->
            <RowDefinition Height="Auto"/>
            <!-- Period Info -->
            <RowDefinition Height="*"/>
            <!-- Transaction Table -->
        </Grid.RowDefinitions>

        <!-- Report Title -->
        <TextBlock Grid.Row="0" x:Name="ReportTitleText" Text="Vessel Account Statement" 
                  FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" 
                  Margin="0,0,0,10" Foreground="Black"/>

        <!-- Account Summary Cards -->
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Margin="0,0,0,10">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="Total Purchases" FontWeight="SemiBold" FontSize="9" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TotalPurchasesText" Text="0 L" FontSize="11" FontWeight="Bold" 
                             HorizontalAlignment="Center" Margin="0,2,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="Total Consumption" FontWeight="SemiBold" FontSize="9" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TotalConsumptionText" Text="0 L" FontSize="11" FontWeight="Bold" 
                             HorizontalAlignment="Center" Margin="0,2,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="Current Balance" FontWeight="SemiBold" FontSize="9" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="CurrentBalanceText" Text="0 L" FontSize="11" FontWeight="Bold" 
                             HorizontalAlignment="Center" Margin="0,2,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="Total Value" FontWeight="SemiBold" FontSize="9" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TotalValueText" Text="$0.00" FontSize="11" FontWeight="Bold" 
                             HorizontalAlignment="Center" Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Period Information -->
        <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,10" Background="#f8f9fa">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock Text="Vessel: " FontWeight="SemiBold" FontSize="9"/>
                    <TextBlock x:Name="VesselNameText" Text="N/A" FontSize="9"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="From: " FontWeight="SemiBold" FontSize="9"/>
                    <TextBlock x:Name="FromDateText" Text="01/01/2025" FontSize="9" Margin="0,0,10,0"/>
                    <TextBlock Text="To: " FontWeight="SemiBold" FontSize="9"/>
                    <TextBlock x:Name="ToDateText" Text="31/12/2025" FontSize="9"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Beginning Balance: " FontWeight="SemiBold" FontSize="9"/>
                    <TextBlock x:Name="BeginningBalanceText" Text="0 L" FontSize="9"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Transaction Table -->
        <StackPanel Grid.Row="3">
            <TextBlock Text="Transaction History" 
                      FontSize="10" FontWeight="SemiBold" Margin="0,0,0,3" Foreground="Black"/>
            <Border BorderBrush="Black" BorderThickness="1">
                <DataGrid x:Name="TransactionDataGrid" AutoGenerateColumns="False" 
                         IsReadOnly="True" HeadersVisibility="Column"
                         GridLinesVisibility="All" BorderThickness="0"
                         Background="White" Foreground="Black"
                         FontSize="7" MaxHeight="400"
                         PreviewMouseWheel="DataGrid_PreviewMouseWheel">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date" Binding="{Binding TransactionDate, StringFormat=dd/MM/yyyy}" Width="0.8*"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding TransactionType}" Width="0.8*"/>
                        <DataGridTextColumn Header="Reference" Binding="{Binding Reference}" Width="1*"/>
                        <DataGridTextColumn Header="Supplier" Binding="{Binding SupplierName}" Width="1.2*"/>
                        <DataGridTextColumn Header="Debit (L)" Binding="{Binding DebitQuantity, StringFormat=N0}" Width="0.9*"/>
                        <DataGridTextColumn Header="Credit (L)" Binding="{Binding CreditQuantity, StringFormat=N0}" Width="0.9*"/>
                        <DataGridTextColumn Header="Balance (L)" Binding="{Binding RunningBalance, StringFormat=N0}" Width="0.9*"/>
                        <DataGridTextColumn Header="USD Value" Binding="{Binding ValueUSD, StringFormat=C0}" Width="1*"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="1.5*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>