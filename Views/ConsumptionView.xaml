<UserControl x:Class="DOInventoryManager.Views.ConsumptionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Quick Stats -->
                <RowDefinition Height="Auto"/>
                <!-- Consumption Form -->
                <RowDefinition Height="*"/>
                <!-- Consumption List -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="⛽" FontSize="32" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="Consumption Entry &amp; Trip Management" FontSize="28" FontWeight="Bold" 
                         VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
            </StackPanel>

            <!-- Quick Stats -->
            <Border Grid.Row="1" Background="{DynamicResource SuccessBackgroundBrush}" BorderBrush="{DynamicResource SuccessForegroundBrush}" BorderThickness="1" 
                  CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="📅 Current Month" FontWeight="SemiBold" HorizontalAlignment="Center" FontSize="12"/>
                        <TextBlock x:Name="CurrentMonthText" Text="2025-07" FontSize="18" FontWeight="Bold" 
                                 HorizontalAlignment="Center" Foreground="{DynamicResource SuccessForegroundBrush}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="⛽ Total Consumption" FontWeight="SemiBold" HorizontalAlignment="Center" FontSize="12"/>
                        <TextBlock x:Name="TotalConsumptionText" Text="0 L" FontSize="18" FontWeight="Bold" 
                                 HorizontalAlignment="Center" Foreground="{DynamicResource SuccessForegroundBrush}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock Text="🗺️ Total Legs" FontWeight="SemiBold" HorizontalAlignment="Center" FontSize="12"/>
                        <TextBlock x:Name="TotalLegsText" Text="0" FontSize="18" FontWeight="Bold" 
                                 HorizontalAlignment="Center" Foreground="{DynamicResource SuccessForegroundBrush}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                        <TextBlock Text="📊 Avg. per Leg" FontWeight="SemiBold" HorizontalAlignment="Center" FontSize="12"/>
                        <TextBlock x:Name="AvgPerLegText" Text="0 L/leg" FontSize="18" FontWeight="Bold" 
                                 HorizontalAlignment="Center" Foreground="{DynamicResource SuccessForegroundBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Consumption Entry Form -->
            <Border Grid.Row="2" Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource BorderSubtleBrush}" BorderThickness="1" 
                  CornerRadius="8" Padding="25" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="Record Monthly Consumption" FontSize="18" FontWeight="SemiBold" 
                                 VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <Rectangle Width="20"/>
                        <Border Background="{DynamicResource WarningBackgroundBrush}" BorderBrush="{DynamicResource WarningForegroundBrush}" BorderThickness="1" 
                              CornerRadius="4" Padding="8,4">
                            <TextBlock Text="💡 Usually recorded once per month (99% of cases)" 
                                     FontSize="12" Foreground="{DynamicResource WarningForegroundBrush}"/>
                        </Border>
                    </StackPanel>

                    <!-- Row 1: Basic Information -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Vessel -->
                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Text="Vessel *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox x:Name="VesselComboBox" Style="{StaticResource FluentComboBoxStyle}" 
                                    DisplayMemberPath="Name" SelectedValuePath="Id"
                                    SelectionChanged="VesselComboBox_SelectionChanged"/>
                        </StackPanel>

                        <!-- Consumption Date -->
                        <StackPanel Grid.Column="1" Margin="0,0,15,0">
                            <TextBlock Text="Consumption Date *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <DatePicker x:Name="ConsumptionDatePicker" Style="{StaticResource FluentDatePickerStyle}" 
                                      SelectedDate="{x:Static System:DateTime.Now}"
                                      xmlns:System="clr-namespace:System;assembly=mscorlib"
                                      SelectedDateChanged="ConsumptionDatePicker_SelectedDateChanged"/>
                        </StackPanel>

                        <!-- Auto-Generated Month -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Month (Auto-Generated)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <Border Background="{DynamicResource SubtleBackgroundBrush}" BorderBrush="{DynamicResource BorderSubtleBrush}" BorderThickness="1" CornerRadius="3">
                                <TextBlock x:Name="MonthDisplayText" Text="2025-07" Padding="10" 
                                         FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Row 2: Route and Consumption -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Route Display -->
                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Text="Route (Auto-Assigned)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <Border Background="{DynamicResource InfoBackgroundBrush}" BorderBrush="{DynamicResource PrimaryBrandBrush}" BorderThickness="1" CornerRadius="3">
                                <TextBlock x:Name="RouteDisplayText" Text="Select vessel to see route" 
                                         Padding="10" FontStyle="Italic" Foreground="{DynamicResource PrimaryBrandBrush}"/>
                            </Border>
                        </StackPanel>

                        <!-- Consumption in Liters -->
                        <StackPanel Grid.Column="1" Margin="0,0,15,0">
                            <TextBlock Text="Consumption (Liters) *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox x:Name="ConsumptionLitersTextBox" Style="{DynamicResource FluentTextBoxStyle}" 
                                   TextChanged="ConsumptionTextBox_TextChanged"/>
                        </StackPanel>

                        <!-- Legs Completed -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Legs Completed (Optional)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox x:Name="LegsCompletedTextBox" Style="{DynamicResource FluentTextBoxStyle}" 
                                   TextChanged="ConsumptionTextBox_TextChanged"
                                   ToolTip="Leave empty or enter 0 for stationary consumption (engines running without movement)"/>
                        </StackPanel>
                    </Grid>

                    <!-- Trip Efficiency Display -->
                    <Border Background="{DynamicResource WarningBackgroundBrush}" BorderBrush="{DynamicResource WarningForegroundBrush}" BorderThickness="1" 
                          CornerRadius="6" Padding="15" Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="🚢 Consumption (T)" FontWeight="SemiBold" HorizontalAlignment="Center" FontSize="12"/>
                                <TextBlock x:Name="VesselTypeText" Text="Not Selected" FontSize="16" FontWeight="Bold" 
                                        HorizontalAlignment="Center" Foreground="{DynamicResource WarningForegroundBrush}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="⛽ Consumption per Leg" FontWeight="SemiBold" HorizontalAlignment="Center" FontSize="12"/>
                                <TextBlock x:Name="ConsumptionPerLegText" Text="0.000 L/leg | 0.000 T/leg" FontSize="14" FontWeight="Bold" 
                                        HorizontalAlignment="Center" Foreground="{DynamicResource WarningForegroundBrush}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="📦 Inventory Status" FontWeight="SemiBold" HorizontalAlignment="Center" FontSize="12"/>
                                <TextBlock x:Name="EfficiencyRatingText" Text="Select Vessel" FontSize="16" FontWeight="Bold" 
                                        HorizontalAlignment="Center" Foreground="{DynamicResource WarningForegroundBrush}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="EditConsumptionBtn" Content="✏️ Edit Selected" 
                              Style="{StaticResource FluentWarningButtonStyle}"
                              Padding="15,12" Margin="0,0,10,0"
                              IsEnabled="False" Click="EditConsumption_Click"/>

                        <Button x:Name="DeleteConsumptionBtn" Content="🗑️ Delete Selected" 
                              Style="{StaticResource FluentDangerButtonStyle}"
                              Padding="15,12" Margin="0,0,15,0"
                              IsEnabled="False" Click="DeleteConsumption_Click"/>

                        <Button x:Name="SaveConsumptionBtn" Content="💾 Save Consumption" 
                              Style="{StaticResource FluentSuccessButtonStyle}"
                              Padding="20,12" Margin="0,0,15,0"
                              Click="SaveConsumption_Click"/>

                        <Button x:Name="RunFIFOBtn" Content="🔄 Save &amp; Run FIFO" 
                              Style="{StaticResource FluentButtonStyle}"
                              Padding="15,12" Margin="0,0,15,0"
                              Click="RunFIFO_Click"/>

                        <Button x:Name="ClearFormBtn" Content="🧹 Clear Form" 
                              Style="{StaticResource FluentSecondaryButtonStyle}"
                              Padding="15,12"
                              Click="ClearForm_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Monthly Consumption List -->
            <Border Grid.Row="3" Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource BorderSubtleBrush}" BorderThickness="1" 
                  CornerRadius="6" Padding="20">
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="📋 Monthly Consumption Records" FontSize="16" FontWeight="SemiBold" 
                                     VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <Rectangle Width="15"/>
                            <ComboBox x:Name="MonthFilterComboBox" MinWidth="120" Style="{DynamicResource FluentComboBoxStyle}" 
                                    SelectionChanged="MonthFilterComboBox_SelectionChanged"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="🔄 Refresh" Style="{StaticResource FluentInfoButtonStyle}"
                                  Padding="10,5" FontSize="12" Margin="0,0,10,0"
                                  Click="RefreshConsumption_Click"/>
                            <Button Content="📊 Month Summary" Style="{StaticResource FluentButtonStyle}"
                                  Padding="10,5" FontSize="12"
                                  Click="MonthSummary_Click"/>
                        </StackPanel>
                    </Grid>

                    <DataGrid x:Name="ConsumptionGrid" 
                            Style="{StaticResource ModernDataGridStyle}"
                            ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeaderStyle}"
                            CellStyle="{StaticResource ModernDataGridCellStyle}"
                            RowStyle="{StaticResource ModernDataGridRowStyle}"
                            AutoGenerateColumns="False" 
                            MaxHeight="400"
                            VirtualizingPanel.IsVirtualizing="True"
                            VirtualizingPanel.VirtualizationMode="Recycling"
                            ScrollViewer.CanContentScroll="True"
                            SelectionChanged="ConsumptionGrid_SelectionChanged"
                            PreviewMouseWheel="DataGrid_PreviewMouseWheel">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding ConsumptionDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                            <DataGridTextColumn Header="Vessel" Binding="{Binding Vessel.Name}" Width="120"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding Vessel.Type}" Width="80"/>
                            <DataGridTextColumn Header="Route" Binding="{Binding Vessel.Route}" Width="180"/>
                            <DataGridTextColumn Header="Consumption (L)" Binding="{Binding ConsumptionLiters, StringFormat=N3}" Width="130"/>
                            <DataGridTextColumn Header="Consumption (T)" Width="130">
                                <DataGridTextColumn.Binding>
                                    <MultiBinding StringFormat="{}{0:N3}">
                                        <!-- This will need to be calculated in code-behind -->
                                        <Binding Path="ConsumptionTons"/>
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Legs" Binding="{Binding LegsCompleted}" Width="60"/>
                            <DataGridTextColumn Header="L/Leg" Binding="{Binding ConsumptionPerLeg, StringFormat=N3}" Width="80"/>
                            <DataGridTextColumn Header="T/Leg" Width="80">
                                <DataGridTextColumn.Binding>
                                    <MultiBinding StringFormat="{}{0:N3}">
                                        <!-- This will need to be calculated in code-behind -->
                                        <Binding Path="TonsPerLeg"/>
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Month" Binding="{Binding Month}" Width="80"/>
                            <DataGridTextColumn Header="Created" Binding="{Binding CreatedDate, StringFormat=dd/MM/yyyy HH:mm}" Width="140"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Route Information Panel -->
                    <Border Background="{DynamicResource InfoBackgroundBrush}" BorderBrush="{DynamicResource PrimaryBrandBrush}" BorderThickness="1" 
                          CornerRadius="4" Padding="15" Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="🗺️ Route &amp; Trip Information" FontWeight="SemiBold" 
                                     Foreground="{DynamicResource PrimaryBrandBrush}" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="• Vessels: Aqaba → Nuweibaa → Aqaba" FontSize="12" Margin="0,0,0,3"/>
                                    <TextBlock Text="• Boats: Aqaba → Taba → Aqaba" FontSize="12" Margin="0,0,0,3"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="• Consumption usually recorded once per month" FontSize="12" Margin="0,0,0,3"/>
                                    <TextBlock Text="• Track legs completed for efficiency analysis" FontSize="12" Margin="0,0,0,3"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>