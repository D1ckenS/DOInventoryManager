<UserControl x:Class="DOInventoryManager.Views.ConsumptionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Quick Stats -->
                <RowDefinition Height="Auto"/>
                <!-- Consumption Form -->
                <RowDefinition Height="*"/>
                <!-- Consumption List -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="⛽" FontSize="32" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="Consumption Entry &amp; Trip Management" FontSize="28" FontWeight="Bold" 
                         VerticalAlignment="Center" Foreground="#2c3e50"/>
            </StackPanel>

            <!-- Quick Stats -->
            <Border Grid.Row="1" Background="#e8f5e8" BorderBrush="#4caf50" BorderThickness="1" 
                  CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="📅 Current Month" FontWeight="SemiBold" HorizontalAlignment="Center" FontSize="12"/>
                        <TextBlock x:Name="CurrentMonthText" Text="2025-07" FontSize="18" FontWeight="Bold" 
                                 HorizontalAlignment="Center" Foreground="#2e7d32"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="⛽ Total Consumption" FontWeight="SemiBold" HorizontalAlignment="Center" FontSize="12"/>
                        <TextBlock x:Name="TotalConsumptionText" Text="0 L" FontSize="18" FontWeight="Bold" 
                                 HorizontalAlignment="Center" Foreground="#2e7d32"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock Text="🗺️ Total Legs" FontWeight="SemiBold" HorizontalAlignment="Center" FontSize="12"/>
                        <TextBlock x:Name="TotalLegsText" Text="0" FontSize="18" FontWeight="Bold" 
                                 HorizontalAlignment="Center" Foreground="#2e7d32"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                        <TextBlock Text="📊 Avg. per Leg" FontWeight="SemiBold" HorizontalAlignment="Center" FontSize="12"/>
                        <TextBlock x:Name="AvgPerLegText" Text="0 L/leg" FontSize="18" FontWeight="Bold" 
                                 HorizontalAlignment="Center" Foreground="#2e7d32"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Consumption Entry Form -->
            <Border Grid.Row="2" Background="White" BorderBrush="#dee2e6" BorderThickness="1" 
                  CornerRadius="8" Padding="25" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="Record Monthly Consumption" FontSize="18" FontWeight="SemiBold" 
                                 VerticalAlignment="Center" Foreground="#2c3e50"/>
                        <Rectangle Width="20"/>
                        <Border Background="#fff3cd" BorderBrush="#ffc107" BorderThickness="1" 
                              CornerRadius="4" Padding="8,4">
                            <TextBlock Text="💡 Usually recorded once per month (99% of cases)" 
                                     FontSize="12" Foreground="#856404"/>
                        </Border>
                    </StackPanel>

                    <!-- Row 1: Basic Information -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Vessel -->
                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Text="Vessel *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox x:Name="VesselComboBox" Padding="10" BorderBrush="#ced4da" 
                                    BorderThickness="1" DisplayMemberPath="Name" SelectedValuePath="Id"
                                    SelectionChanged="VesselComboBox_SelectionChanged"/>
                        </StackPanel>

                        <!-- Consumption Date -->
                        <StackPanel Grid.Column="1" Margin="0,0,15,0">
                            <TextBlock Text="Consumption Date *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <DatePicker x:Name="ConsumptionDatePicker" Padding="10" BorderBrush="#ced4da" 
                                      BorderThickness="1" SelectedDate="{x:Static System:DateTime.Now}"
                                      xmlns:System="clr-namespace:System;assembly=mscorlib"
                                      SelectedDateChanged="ConsumptionDatePicker_SelectedDateChanged"/>
                        </StackPanel>

                        <!-- Auto-Generated Month -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Month (Auto-Generated)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <Border Background="#f8f9fa" BorderBrush="#ced4da" BorderThickness="1" CornerRadius="3">
                                <TextBlock x:Name="MonthDisplayText" Text="2025-07" Padding="10" 
                                         FontWeight="SemiBold" Foreground="#495057"/>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Row 2: Route and Consumption -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Route Display -->
                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Text="Route (Auto-Assigned)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <Border Background="#e3f2fd" BorderBrush="#2196f3" BorderThickness="1" CornerRadius="3">
                                <TextBlock x:Name="RouteDisplayText" Text="Select vessel to see route" 
                                         Padding="10" FontStyle="Italic" Foreground="#1976d2"/>
                            </Border>
                        </StackPanel>

                        <!-- Consumption in Liters -->
                        <StackPanel Grid.Column="1" Margin="0,0,15,0">
                            <TextBlock Text="Consumption (Liters) *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox x:Name="ConsumptionLitersTextBox" Padding="10" BorderBrush="#ced4da" 
                                   BorderThickness="1" TextChanged="ConsumptionTextBox_TextChanged"/>
                        </StackPanel>

                        <!-- Legs Completed -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Legs Completed *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox x:Name="LegsCompletedTextBox" Padding="10" BorderBrush="#ced4da" 
                                   BorderThickness="1" TextChanged="ConsumptionTextBox_TextChanged"/>
                        </StackPanel>
                    </Grid>

                    <!-- Trip Efficiency Display -->
                    <Border Background="#fff3cd" BorderBrush="#ffc107" BorderThickness="1" 
                          CornerRadius="6" Padding="15" Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="🚢 Vessel Type" FontWeight="SemiBold" HorizontalAlignment="Center" FontSize="12"/>
                                <TextBlock x:Name="VesselTypeText" Text="Not Selected" FontSize="16" FontWeight="Bold" 
                                         HorizontalAlignment="Center" Foreground="#856404"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="⛽ Consumption per Leg" FontWeight="SemiBold" HorizontalAlignment="Center" FontSize="12"/>
                                <TextBlock x:Name="ConsumptionPerLegText" Text="0.00 L/leg" FontSize="16" FontWeight="Bold" 
                                         HorizontalAlignment="Center" Foreground="#856404"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="📈 Efficiency Rating" FontWeight="SemiBold" HorizontalAlignment="Center" FontSize="12"/>
                                <TextBlock x:Name="EfficiencyRatingText" Text="Calculate" FontSize="16" FontWeight="Bold" 
                                         HorizontalAlignment="Center" Foreground="#856404"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="SaveConsumptionBtn" Content="💾 Save Consumption" 
                              Background="#27ae60" Foreground="White" BorderThickness="0" 
                              Padding="20,12" Margin="0,0,15,0" FontWeight="SemiBold"
                              Click="SaveConsumption_Click"/>

                        <Button x:Name="RunFIFOBtn" Content="🔄 Save &amp; Run FIFO" 
                              Background="#e74c3c" Foreground="White" BorderThickness="0" 
                              Padding="15,12" Margin="0,0,15,0" FontWeight="SemiBold"
                              Click="RunFIFO_Click"/>

                        <Button x:Name="ClearFormBtn" Content="🧹 Clear Form" 
                              Background="#6c757d" Foreground="White" BorderThickness="0" 
                              Padding="15,12" FontWeight="SemiBold"
                              Click="ClearForm_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Monthly Consumption List -->
            <Border Grid.Row="3" Background="White" BorderBrush="#dee2e6" BorderThickness="1" 
                  CornerRadius="6" Padding="20">
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="📋 Monthly Consumption Records" FontSize="16" FontWeight="SemiBold" 
                                     VerticalAlignment="Center" Foreground="#2c3e50"/>
                            <Rectangle Width="15"/>
                            <ComboBox x:Name="MonthFilterComboBox" MinWidth="120" Padding="8,5" 
                                    SelectionChanged="MonthFilterComboBox_SelectionChanged"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="🔄 Refresh" Background="#17a2b8" Foreground="White" 
                                  BorderThickness="0" Padding="10,5" FontSize="12" Margin="0,0,10,0"
                                  Click="RefreshConsumption_Click"/>
                            <Button Content="📊 Month Summary" Background="#6f42c1" Foreground="White" 
                                  BorderThickness="0" Padding="10,5" FontSize="12"
                                  Click="MonthSummary_Click"/>
                        </StackPanel>
                    </Grid>

                    <DataGrid x:Name="ConsumptionGrid" 
                            AutoGenerateColumns="False" 
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            CanUserReorderColumns="False"
                            CanUserResizeRows="False"
                            CanUserSortColumns="True"
                            GridLinesVisibility="Horizontal"
                            HeadersVisibility="Column"
                            Background="White"
                            BorderThickness="0"
                            MaxHeight="400">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding ConsumptionDate, StringFormat=yyyy-MM-dd}" Width="100"/>
                            <DataGridTextColumn Header="Vessel" Binding="{Binding Vessel.Name}" Width="120"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding Vessel.Type}" Width="80"/>
                            <DataGridTextColumn Header="Route" Binding="{Binding Vessel.Route}" Width="180"/>
                            <DataGridTextColumn Header="Consumption (L)" Binding="{Binding ConsumptionLiters, StringFormat=N2}" Width="120"/>
                            <DataGridTextColumn Header="Legs" Binding="{Binding LegsCompleted}" Width="60"/>
                            <DataGridTextColumn Header="L/Leg" Binding="{Binding ConsumptionPerLeg, StringFormat=N2}" Width="80"/>
                            <DataGridTextColumn Header="Month" Binding="{Binding Month}" Width="80"/>
                            <DataGridTextColumn Header="Created" Binding="{Binding CreatedDate, StringFormat=yyyy-MM-dd HH:mm}" Width="140"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Route Information Panel -->
                    <Border Background="#e3f2fd" BorderBrush="#2196f3" BorderThickness="1" 
                          CornerRadius="4" Padding="15" Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="🗺️ Route &amp; Trip Information" FontWeight="SemiBold" 
                                     Foreground="#1976d2" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="• Vessels: Aqaba → Nuweibaa → Aqaba" FontSize="12" Margin="0,0,0,3"/>
                                    <TextBlock Text="• Boats: Aqaba → Taba → Aqaba" FontSize="12" Margin="0,0,0,3"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="• Consumption usually recorded once per month" FontSize="12" Margin="0,0,0,3"/>
                                    <TextBlock Text="• Track legs completed for efficiency analysis" FontSize="12" Margin="0,0,0,3"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>