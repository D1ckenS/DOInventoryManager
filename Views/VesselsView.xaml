<UserControl x:Class="DOInventoryManager.Views.VesselsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Vessels &amp; Fleet Management" FontSize="28" FontWeight="Bold" 
                 Margin="0,0,0,20" Foreground="{DynamicResource TextPrimaryBrush}"/>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource BorderSubtleBrush}" BorderThickness="1" 
              CornerRadius="6" Padding="15" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="AddVesselBtn" Content="➕ Add New Vessel" 
                      Style="{StaticResource FluentSuccessButtonStyle}"
                      Padding="15,10" Margin="0,0,15,0"
                      Click="AddVessel_Click"/>

                <Button x:Name="EditVesselBtn" Content="✏️ Edit Selected" 
                      Style="{StaticResource FluentWarningButtonStyle}"
                      Padding="15,10" Margin="0,0,15,0"
                      IsEnabled="False" Click="EditVessel_Click"/>

                <Button x:Name="DeleteVesselBtn" Content="🗑️ Delete Selected" 
                      Style="{StaticResource FluentDangerButtonStyle}"
                      Padding="15,10" Margin="0,0,15,0"
                      IsEnabled="False" Click="DeleteVessel_Click"/>

                <Rectangle Width="1" Fill="{DynamicResource BorderSubtleBrush}" Margin="15,0"/>

                <Button x:Name="RefreshBtn" Content="🔄 Refresh" 
                      Style="{StaticResource FluentSecondaryButtonStyle}"
                      Padding="15,10"
                      Click="Refresh_Click"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- Vessels List -->
                <ColumnDefinition Width="Auto"/>
                <!-- Splitter -->
                <ColumnDefinition Width="1*"/>
                <!-- Add/Edit Form -->
            </Grid.ColumnDefinitions>

            <!-- Vessels List -->
            <Border Grid.Column="0" Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource BorderSubtleBrush}" BorderThickness="1" 
                  CornerRadius="6" Padding="15" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Fleet Overview" FontSize="16" FontWeight="SemiBold" 
                             Margin="0,0,0,15" Foreground="{DynamicResource TextPrimaryBrush}"/>

                    <DataGrid x:Name="VesselsGrid" 
                            AutoGenerateColumns="False" 
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            CanUserReorderColumns="False"
                            CanUserResizeRows="False"
                            CanUserSortColumns="True"
                            GridLinesVisibility="Horizontal"
                            HeadersVisibility="Column"
                            BorderThickness="0"
                            SelectionMode="Single"
                            SelectionChanged="VesselsGrid_SelectionChanged"
                            PreviewMouseWheel="DataGrid_PreviewMouseWheel"
                            VirtualizingPanel.VirtualizationMode="Recycling"
                            VirtualizingPanel.IsVirtualizing="True"
                            ScrollViewer.CanContentScroll="True"
                            Background="{DynamicResource CardBackgroundBrush}"
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            AlternatingRowBackground="{DynamicResource AlternatingRowBackgroundBrush}">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Vessel Name" Binding="{Binding Name}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="80" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Route" Binding="{Binding Route}" Width="200" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Created Date" Binding="{Binding CreatedDate, StringFormat=dd/MM/yyyy}" Width="120" IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Fleet Statistics -->
                    <Border Background="{DynamicResource InfoBackgroundBrush}" BorderBrush="{DynamicResource PrimaryBrandBrush}" BorderThickness="1" 
                          CornerRadius="4" Padding="15" Margin="0,20,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="Total Fleet" FontWeight="SemiBold" HorizontalAlignment="Center" FontSize="12"/>
                                <TextBlock x:Name="TotalFleetText" Text="0" FontSize="20" FontWeight="Bold" 
                                         HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryBrandBrush}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="Vessels" FontWeight="SemiBold" HorizontalAlignment="Center" FontSize="12"/>
                                <TextBlock x:Name="VesselsCountText" Text="0" FontSize="20" FontWeight="Bold" 
                                         HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryBrandBrush}"/>
                                <TextBlock Text="(Aqaba-Nuweibaa)" FontSize="10" HorizontalAlignment="Center" Foreground="{DynamicResource TextTertiaryBrush}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="Boats" FontWeight="SemiBold" HorizontalAlignment="Center" FontSize="12"/>
                                <TextBlock x:Name="BoatsCountText" Text="0" FontSize="20" FontWeight="Bold" 
                                         HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryBrandBrush}"/>
                                <TextBlock Text="(Aqaba-Taba)" FontSize="10" HorizontalAlignment="Center" Foreground="{DynamicResource TextTertiaryBrush}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="3" Background="{DynamicResource BorderSubtleBrush}" 
                        HorizontalAlignment="Center" VerticalAlignment="Stretch"/>

            <!-- Add/Edit Form -->
            <Border Grid.Column="2" Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource BorderSubtleBrush}" BorderThickness="1" 
                  CornerRadius="6" Padding="20" Margin="10,0,0,0">
                <StackPanel>
                    <TextBlock x:Name="FormTitle" Text="Add New Vessel" FontSize="16" FontWeight="SemiBold" 
                             Margin="0,0,0,20" Foreground="{DynamicResource TextPrimaryBrush}"/>

                    <!-- Vessel Name -->
                    <TextBlock Text="Vessel Name *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="VesselNameTextBox" 
                           Style="{StaticResource FluentTextBoxStyle}"
                           Margin="0,0,0,15"/>

                    <!-- Vessel Type -->
                    <TextBlock Text="Vessel Type *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="VesselTypeComboBox" 
                            Style="{StaticResource FluentComboBoxStyle}"
                            Margin="0,0,0,15"
                            SelectionChanged="VesselTypeComboBox_SelectionChanged">
                        <ComboBoxItem Content="Vessel" Tag="Vessel"/>
                        <ComboBoxItem Content="Boat" Tag="Boat"/>
                    </ComboBox>

                    <!-- Route Display -->
                    <TextBlock Text="Assigned Route" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <Border Background="{DynamicResource SubtleBackgroundBrush}" BorderBrush="{DynamicResource BorderSubtleBrush}" BorderThickness="1" 
                            Margin="0,0,0,15" CornerRadius="3">
                        <TextBlock x:Name="RouteDisplayText" Text="Select vessel type to see route" 
                                 Padding="10" FontStyle="Italic" Foreground="{DynamicResource TextTertiaryBrush}"/>
                    </Border>

                    <!-- Form Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button x:Name="SaveBtn" Content="💾 Save" 
                              Style="{StaticResource FluentSuccessButtonStyle}"
                              Padding="15,10" Margin="0,0,10,0"
                              Click="Save_Click"/>

                        <Button x:Name="CancelBtn" Content="❌ Cancel" 
                              Style="{StaticResource FluentSecondaryButtonStyle}"
                              Padding="15,10"
                              Click="Cancel_Click"/>
                    </StackPanel>

                    <!-- Route Information Panel -->
                    <Border Background="{DynamicResource WarningBackgroundBrush}" BorderBrush="{DynamicResource WarningForegroundBrush}" BorderThickness="1" 
                          CornerRadius="4" Padding="15" Margin="0,30,0,0">
                        <StackPanel>
                            <TextBlock Text="📍 Route Information" FontWeight="SemiBold" 
                                     Foreground="{DynamicResource WarningForegroundBrush}" Margin="0,0,0,10"/>
                            <TextBlock Text="• Vessel: Aqaba → Nuweibaa → Aqaba" FontSize="12" Margin="0,0,0,3"/>
                            <TextBlock Text="• Boat: Aqaba → Taba → Aqaba" FontSize="12" Margin="0,0,0,3"/>
                            <TextBlock Text="• Route is automatically assigned based on vessel type" 
                                     FontSize="11" FontStyle="Italic" Foreground="{DynamicResource TextTertiaryBrush}" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>