<UserControl x:Class="DOInventoryManager.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            
            <!-- Header -->
            <TextBlock Text="Dashboard" 
                     FontSize="28" FontWeight="Bold"
                     Foreground="{DynamicResource TextPrimaryBrush}"
                     Margin="0,0,0,32"/>
            
            <!-- Quick Stats Cards -->
            <Grid Margin="0,0,0,32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Total Vessels Card -->
                <Border Grid.Column="0" 
                        Style="{StaticResource StatCardStyle}" 
                        Margin="0,0,16,0">
                    <StackPanel>
                        <TextBlock Text="&#xE7B8;" 
                                 FontSize="32" FontFamily="{StaticResource FluentIconFont}" 
                                 Foreground="{DynamicResource PrimaryBrandBrush}"
                                 HorizontalAlignment="Center" 
                                 Margin="0,0,0,12"/>
                        <TextBlock x:Name="TotalVesselsText" 
                                 Text="0" 
                                 FontSize="24" FontWeight="SemiBold" 
                                 HorizontalAlignment="Center" 
                                 Margin="0,0,0,4"/>
                        <TextBlock Text="Total Vessels" 
                                 FontSize="12" FontWeight="Medium"
                                 Foreground="{DynamicResource TextSecondaryBrush}"
                                 HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Total Suppliers Card -->
                <Border Grid.Column="1" 
                        Style="{StaticResource StatCardStyle}" 
                        Margin="0,0,16,0">
                    <StackPanel>
                        <TextBlock Text="&#xE716;" 
                                 FontSize="32" FontFamily="{StaticResource FluentIconFont}" 
                                 Foreground="{DynamicResource SuccessForegroundBrush}"
                                 HorizontalAlignment="Center" 
                                 Margin="0,0,0,12"/>
                        <TextBlock x:Name="TotalSuppliersText" 
                                 Text="0" 
                                 FontSize="24" FontWeight="SemiBold" 
                                 HorizontalAlignment="Center" 
                                 Margin="0,0,0,4"/>
                        <TextBlock Text="Active Suppliers" 
                                 FontSize="12" FontWeight="Medium"
                                 Foreground="{DynamicResource TextSecondaryBrush}"
                                 HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Current Inventory Card -->
                <Border Grid.Column="2" 
                        Style="{StaticResource StatCardStyle}" 
                        Margin="0,0,16,0">
                    <StackPanel>
                        <TextBlock Text="&#xE73F;" 
                                 FontSize="32" FontFamily="{StaticResource FluentIconFont}" 
                                 Foreground="{DynamicResource CriticalForegroundBrush}"
                                 HorizontalAlignment="Center" 
                                 Margin="0,0,0,12"/>
                        <TextBlock x:Name="CurrentInventoryText" 
                                 Text="0" 
                                 FontSize="24" FontWeight="SemiBold" 
                                 HorizontalAlignment="Center" 
                                 Margin="0,0,0,4"/>
                        <TextBlock Text="Liters on Hand" 
                                 FontSize="12" FontWeight="Medium"
                                 Foreground="{DynamicResource TextSecondaryBrush}"
                                 HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Inventory Value Card -->
                <Border Grid.Column="3" 
                        Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="&#xE7BF;" 
                                 FontSize="32" FontFamily="{StaticResource FluentIconFont}" 
                                 Foreground="{DynamicResource CautionForegroundBrush}"
                                 HorizontalAlignment="Center" 
                                 Margin="0,0,0,12"/>
                        <TextBlock x:Name="InventoryValueText" 
                                 Text="$0" 
                                 FontSize="24" FontWeight="SemiBold" 
                                 HorizontalAlignment="Center" 
                                 Margin="0,0,0,4"/>
                        <TextBlock Text="Inventory Value (USD)" 
                                 FontSize="12" FontWeight="Medium"
                                 Foreground="{DynamicResource TextSecondaryBrush}"
                                 HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- Quick Actions -->
            <Border Style="{StaticResource FluentCardStyle}" Margin="0,0,0,32">
                <StackPanel>
                    <TextBlock Text="Quick Actions" 
                             FontSize="20" FontWeight="SemiBold" 
                             Margin="0,0,0,20"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0" 
                              Style="{StaticResource FluentButtonStyle}"
                              Content="New Purchase" 
                              Padding="16,12" 
                              Margin="0,0,12,0"
                              Click="NewPurchase_Click"/>
                        
                        <Button Grid.Column="1" 
                              Style="{StaticResource FluentSecondaryButtonStyle}"
                              Content="Add Consumption" 
                              Padding="16,12" 
                              Margin="0,0,12,0"
                              Click="AddConsumption_Click"/>
                        
                        <Button Grid.Column="2" 
                              Style="{StaticResource FluentButtonStyle}"
                              Content="Run FIFO Allocation"
                              Padding="16,12"
                              Click="RunFIFO_Click"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Recent Activity -->
            <Border Style="{StaticResource FluentCardStyle}">
                <StackPanel>
                    <TextBlock Text="Recent Activity" 
                             FontSize="20" FontWeight="SemiBold" 
                             Margin="0,0,0,20"/>
                    
                    <DataGrid x:Name="RecentActivityGrid" 
                            Style="{StaticResource ResponsiveDataGridStyle}"
                            MaxHeight="300">
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" 
                                              Binding="{Binding Date, StringFormat=dd/MM/yyyy}" 
                                              Width="1.2*" MinWidth="100"/>
                            <DataGridTextColumn Header="Type" 
                                              Binding="{Binding Type}" 
                                              Width="1*" MinWidth="90"/>
                            <DataGridTextColumn Header="Vessel" 
                                              Binding="{Binding Vessel}" 
                                              Width="1.5*" MinWidth="120"/>
                            <DataGridTextColumn Header="Description" 
                                              Binding="{Binding Description}" 
                                              Width="2*" MinWidth="150">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="4,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Amount" 
                                              Binding="{Binding FormattedAmount}" 
                                              Width="1.3*" MinWidth="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                        <Setter Property="Margin" Value="4,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <TextBlock x:Name="NoDataText" 
                             Text="No recent activity to display. Start by adding suppliers and vessels." 
                             FontSize="14" FontWeight="Normal"
                             Foreground="{DynamicResource TextTertiaryBrush}"
                             FontStyle="Italic" 
                             Margin="0,20,0,0" 
                             HorizontalAlignment="Center" 
                             Visibility="Visible"/>
                </StackPanel>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>