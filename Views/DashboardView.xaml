<UserControl x:Class="DOInventoryManager.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            
            <!-- Header -->
            <TextBlock Text="Dashboard" 
                     Style="{StaticResource DisplayMediumTextStyle}" 
                     Margin="0,0,0,32"/>
            
            <!-- Quick Stats Cards -->
            <Grid Margin="0,0,0,32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Total Vessels Card -->
                <Border Grid.Column="0" 
                        Style="{StaticResource StatCardStyle}" 
                        Margin="0,0,16,0">
                    <StackPanel>
                        <TextBlock Text="&#xE7B8;" 
                                 Style="{StaticResource FluentIconLarge}" 
                                 Foreground="{DynamicResource PrimaryBrandBrush}"
                                 HorizontalAlignment="Center" 
                                 Margin="0,0,0,12"/>
                        <TextBlock x:Name="TotalVesselsText" 
                                 Text="0" 
                                 Style="{StaticResource HeadlineLargeTextStyle}" 
                                 HorizontalAlignment="Center" 
                                 Margin="0,0,0,4"/>
                        <TextBlock Text="Total Vessels" 
                                 Style="{StaticResource LabelMediumTextStyle}"
                                 Foreground="{DynamicResource TextSecondaryBrush}"
                                 HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Total Suppliers Card -->
                <Border Grid.Column="1" 
                        Style="{StaticResource StatCardStyle}" 
                        Margin="0,0,16,0">
                    <StackPanel>
                        <TextBlock Text="&#xE716;" 
                                 Style="{StaticResource FluentIconLarge}" 
                                 Foreground="{DynamicResource SuccessForegroundBrush}"
                                 HorizontalAlignment="Center" 
                                 Margin="0,0,0,12"/>
                        <TextBlock x:Name="TotalSuppliersText" 
                                 Text="0" 
                                 Style="{StaticResource HeadlineLargeTextStyle}" 
                                 HorizontalAlignment="Center" 
                                 Margin="0,0,0,4"/>
                        <TextBlock Text="Active Suppliers" 
                                 Style="{StaticResource LabelMediumTextStyle}"
                                 Foreground="{DynamicResource TextSecondaryBrush}"
                                 HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Current Inventory Card -->
                <Border Grid.Column="2" 
                        Style="{StaticResource StatCardStyle}" 
                        Margin="0,0,16,0">
                    <StackPanel>
                        <TextBlock Text="&#xE73F;" 
                                 Style="{StaticResource FluentIconLarge}" 
                                 Foreground="{DynamicResource CriticalForegroundBrush}"
                                 HorizontalAlignment="Center" 
                                 Margin="0,0,0,12"/>
                        <TextBlock x:Name="CurrentInventoryText" 
                                 Text="0" 
                                 Style="{StaticResource HeadlineLargeTextStyle}" 
                                 HorizontalAlignment="Center" 
                                 Margin="0,0,0,4"/>
                        <TextBlock Text="Liters on Hand" 
                                 Style="{StaticResource LabelMediumTextStyle}"
                                 Foreground="{DynamicResource TextSecondaryBrush}"
                                 HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Inventory Value Card -->
                <Border Grid.Column="3" 
                        Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="&#xE7BF;" 
                                 Style="{StaticResource FluentIconLarge}" 
                                 Foreground="{DynamicResource CautionForegroundBrush}"
                                 HorizontalAlignment="Center" 
                                 Margin="0,0,0,12"/>
                        <TextBlock x:Name="InventoryValueText" 
                                 Text="$0" 
                                 Style="{StaticResource HeadlineLargeTextStyle}" 
                                 HorizontalAlignment="Center" 
                                 Margin="0,0,0,4"/>
                        <TextBlock Text="Inventory Value (USD)" 
                                 Style="{StaticResource LabelMediumTextStyle}"
                                 Foreground="{DynamicResource TextSecondaryBrush}"
                                 HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- Quick Actions -->
            <Border Style="{StaticResource FluentCardStyle}" Margin="0,0,0,32">
                <StackPanel>
                    <TextBlock Text="Quick Actions" 
                             Style="{StaticResource TitleLargeTextStyle}" 
                             Margin="0,0,0,20"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0" 
                              Style="{StaticResource FluentButtonStyle}"
                              Content="New Purchase" 
                              Padding="16,12" 
                              Margin="0,0,12,0"
                              Click="NewPurchase_Click"/>
                        
                        <Button Grid.Column="1" 
                              Style="{StaticResource FluentSecondaryButtonStyle}"
                              Content="Add Consumption" 
                              Padding="16,12" 
                              Margin="0,0,12,0"
                              Click="AddConsumption_Click"/>
                        
                        <Button Grid.Column="2" 
                              Style="{StaticResource FluentButtonStyle}"
                              Content="Run FIFO Allocation"
                              Padding="16,12"
                              Click="RunFIFO_Click"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Recent Activity -->
            <Border Style="{StaticResource FluentCardStyle}">
                <StackPanel>
                    <TextBlock Text="Recent Activity" 
                             Style="{StaticResource TitleLargeTextStyle}" 
                             Margin="0,0,0,20"/>
                    
                    <DataGrid x:Name="RecentActivityGrid" 
                            AutoGenerateColumns="False" 
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            CanUserReorderColumns="False"
                            CanUserResizeRows="False"
                            CanUserSortColumns="True"
                            GridLinesVisibility="Horizontal"
                            HeadersVisibility="Column"
                            BorderThickness="0"
                            MaxHeight="300">
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=dd/MM/yyyy}" Width="100"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100"/>
                            <DataGridTextColumn Header="Vessel" Binding="{Binding Vessel}" Width="150"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                            <DataGridTextColumn Header="Amount" Binding="{Binding FormattedAmount}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <TextBlock x:Name="NoDataText" 
                             Text="No recent activity to display. Start by adding suppliers and vessels." 
                             Style="{StaticResource BodyMediumTextStyle}"
                             Foreground="{DynamicResource TextTertiaryBrush}"
                             FontStyle="Italic" 
                             Margin="0,20,0,0" 
                             HorizontalAlignment="Center" 
                             Visibility="Visible"/>
                </StackPanel>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>