<UserControl x:Class="DOInventoryManager.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            
            <!-- Header -->
            <TextBlock Text="Dashboard" FontSize="28" FontWeight="Bold" Margin="0,0,0,30" Foreground="#2c3e50"/>
            
            <!-- Quick Stats Cards -->
            <Grid Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Total Vessels Card -->
                <Border Grid.Column="0" Background="#3498db" CornerRadius="8" Margin="0,0,15,0" Padding="20">
                    <StackPanel>
                        <TextBlock Text="🚢" FontSize="32" HorizontalAlignment="Center" Foreground="White"/>
                        <TextBlock x:Name="TotalVesselsText" Text="0" FontSize="24" FontWeight="Bold" 
                                 HorizontalAlignment="Center" Foreground="White" Margin="0,10,0,5"/>
                        <TextBlock Text="Total Vessels" FontSize="12" HorizontalAlignment="Center" 
                                 Foreground="LightBlue"/>
                    </StackPanel>
                </Border>
                
                <!-- Total Suppliers Card -->
                <Border Grid.Column="1" Background="#27ae60" CornerRadius="8" Margin="0,0,15,0" Padding="20">
                    <StackPanel>
                        <TextBlock Text="🏢" FontSize="32" HorizontalAlignment="Center" Foreground="White"/>
                        <TextBlock x:Name="TotalSuppliersText" Text="0" FontSize="24" FontWeight="Bold" 
                                 HorizontalAlignment="Center" Foreground="White" Margin="0,10,0,5"/>
                        <TextBlock Text="Active Suppliers" FontSize="12" HorizontalAlignment="Center" 
                                 Foreground="LightGreen"/>
                    </StackPanel>
                </Border>
                
                <!-- Current Inventory Card -->
                <Border Grid.Column="2" Background="#e74c3c" CornerRadius="8" Margin="0,0,15,0" Padding="20">
                    <StackPanel>
                        <TextBlock Text="⛽" FontSize="32" HorizontalAlignment="Center" Foreground="White"/>
                        <TextBlock x:Name="CurrentInventoryText" Text="0" FontSize="24" FontWeight="Bold" 
                                 HorizontalAlignment="Center" Foreground="White" Margin="0,10,0,5"/>
                        <TextBlock Text="Liters on Hand" FontSize="12" HorizontalAlignment="Center" 
                                 Foreground="LightPink"/>
                    </StackPanel>
                </Border>
                
                <!-- Inventory Value Card -->
                <Border Grid.Column="3" Background="#f39c12" CornerRadius="8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="💰" FontSize="32" HorizontalAlignment="Center" Foreground="White"/>
                        <TextBlock x:Name="InventoryValueText" Text="$0" FontSize="24" FontWeight="Bold" 
                                 HorizontalAlignment="Center" Foreground="White" Margin="0,10,0,5"/>
                        <TextBlock Text="Inventory Value (USD)" FontSize="12" HorizontalAlignment="Center" 
                                 Foreground="LightYellow"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- Quick Actions -->
            <Border Background="#f8f9fa" BorderBrush="#dee2e6" BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,0,30">
                <StackPanel>
                    <TextBlock Text="Quick Actions" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15" Foreground="#2c3e50"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0" Content="🛒 New Purchase" Background="#3498db" Foreground="White" 
                              BorderThickness="0" Padding="15,10" Margin="0,0,10,0" FontWeight="SemiBold"
                              Click="NewPurchase_Click"/>
                        
                        <Button Grid.Column="1" Content="⛽ Add Consumption" Background="#27ae60" Foreground="White" 
                              BorderThickness="0" Padding="15,10" Margin="0,0,10,0" FontWeight="SemiBold"
                              Click="AddConsumption_Click"/>
                        
                        <Button Grid.Column="2" Content="🔄 Run FIFO Allocation" Background="#e74c3c" Foreground="White" 
                              BorderThickness="0" Padding="15,10" FontWeight="SemiBold"
                              Click="RunFIFO_Click"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Recent Activity -->
            <Border Background="White" BorderBrush="#dee2e6" BorderThickness="1" CornerRadius="8" Padding="20">
                <StackPanel>
                    <TextBlock Text="Recent Activity" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15" Foreground="#2c3e50"/>
                    
                    <DataGrid x:Name="RecentActivityGrid" 
                            AutoGenerateColumns="False" 
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            CanUserReorderColumns="False"
                            CanUserResizeRows="False"
                            CanUserSortColumns="True"
                            GridLinesVisibility="Horizontal"
                            HeadersVisibility="Column"
                            Background="White"
                            BorderThickness="0"
                            MaxHeight="300">
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=dd/MM/yyyy}" Width="100"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100"/>
                            <DataGridTextColumn Header="Vessel" Binding="{Binding Vessel}" Width="150"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                            <DataGridTextColumn Header="Amount" Binding="{Binding FormattedAmount}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <TextBlock x:Name="NoDataText" Text="No recent activity to display. Start by adding suppliers and vessels." 
                             Foreground="Gray" FontStyle="Italic" Margin="0,20,0,0" 
                             HorizontalAlignment="Center" Visibility="Visible"/>
                </StackPanel>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>