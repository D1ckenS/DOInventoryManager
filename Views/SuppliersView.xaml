<UserControl x:Class="DOInventoryManager.Views.SuppliersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Header -->
            <RowDefinition Height="Auto"/>  <!-- Toolbar -->
            <RowDefinition Height="*"/>     <!-- Content -->
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Supplier Management" FontSize="28" FontWeight="Bold" 
                 Margin="0,0,0,20" Foreground="#2c3e50"/>
        
        <!-- Toolbar -->
        <Border Grid.Row="1" Background="#f8f9fa" BorderBrush="#dee2e6" BorderThickness="1" 
              CornerRadius="6" Padding="15" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="AddSupplierBtn" Content="➕ Add New Supplier" 
                      Background="#27ae60" Foreground="White" BorderThickness="0" 
                      Padding="15,10" Margin="0,0,15,0" FontWeight="SemiBold"
                      Click="AddSupplier_Click"/>
                
                <Button x:Name="EditSupplierBtn" Content="✏️ Edit Selected" 
                      Background="#f39c12" Foreground="White" BorderThickness="0" 
                      Padding="15,10" Margin="0,0,15,0" FontWeight="SemiBold"
                      IsEnabled="False" Click="EditSupplier_Click"/>
                
                <Button x:Name="DeleteSupplierBtn" Content="🗑️ Delete Selected" 
                      Background="#e74c3c" Foreground="White" BorderThickness="0" 
                      Padding="15,10" Margin="0,0,15,0" FontWeight="SemiBold"
                      IsEnabled="False" Click="DeleteSupplier_Click"/>
                
                <Rectangle Width="1" Fill="#dee2e6" Margin="15,0"/>
                
                <Button x:Name="RefreshBtn" Content="🔄 Refresh" 
                      Background="#6c757d" Foreground="White" BorderThickness="0" 
                      Padding="15,10" FontWeight="SemiBold"
                      Click="Refresh_Click"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>  <!-- Suppliers List -->
                <ColumnDefinition Width="Auto"/> <!-- Splitter -->
                <ColumnDefinition Width="1*"/>  <!-- Add/Edit Form -->
            </Grid.ColumnDefinitions>
            
            <!-- Suppliers List -->
            <Border Grid.Column="0" Background="White" BorderBrush="#dee2e6" BorderThickness="1" 
                  CornerRadius="6" Padding="15" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Active Suppliers" FontSize="16" FontWeight="SemiBold" 
                             Margin="0,0,0,15" Foreground="#2c3e50"/>
                    
                    <DataGrid x:Name="SuppliersGrid" 
                            AutoGenerateColumns="False" 
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            CanUserReorderColumns="False"
                            CanUserResizeRows="False"
                            CanUserSortColumns="True"
                            GridLinesVisibility="Horizontal"
                            HeadersVisibility="Column"
                            Background="White"
                            BorderThickness="0"
                            SelectionMode="Single"
                            SelectionChanged="SuppliersGrid_SelectionChanged"
                            PreviewMouseWheel="DataGrid_PreviewMouseWheel">
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Supplier Name" Binding="{Binding Name}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Currency" Binding="{Binding Currency}" Width="80" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Exchange Rate" Binding="{Binding ExchangeRate, StringFormat=F6}" Width="120" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Created Date" Binding="{Binding CreatedDate, StringFormat=dd/MM/yyyy}" Width="120" IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="3" Background="#dee2e6" 
                        HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
            
            <!-- Add/Edit Form -->
            <Border Grid.Column="2" Background="White" BorderBrush="#dee2e6" BorderThickness="1" 
                  CornerRadius="6" Padding="20" Margin="10,0,0,0">
                <StackPanel>
                    <TextBlock x:Name="FormTitle" Text="Add New Supplier" FontSize="16" FontWeight="SemiBold" 
                             Margin="0,0,0,20" Foreground="#2c3e50"/>
                    
                    <!-- Supplier Name -->
                    <TextBlock Text="Supplier Name *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="SupplierNameTextBox" Padding="10" BorderBrush="#ced4da" 
                           BorderThickness="1" Margin="0,0,0,15"/>
                    
                    <!-- Currency -->
                    <TextBlock Text="Currency *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="CurrencyComboBox" Padding="10" BorderBrush="#ced4da" 
                            BorderThickness="1" Margin="0,0,0,15"
                            SelectionChanged="CurrencyComboBox_SelectionChanged">
                        <ComboBoxItem Content="USD - US Dollar" Tag="USD"/>
                        <ComboBoxItem Content="JOD - Jordanian Dinar" Tag="JOD"/>
                        <ComboBoxItem Content="EGP - Egyptian Pound" Tag="EGP"/>
                    </ComboBox>
                    
                    <!-- Exchange Rate -->
                    <TextBlock Text="Exchange Rate to USD *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="ExchangeRateTextBox" Padding="10" BorderBrush="#ced4da" 
                           BorderThickness="1" Margin="0,0,0,5"/>
                    <TextBlock x:Name="ExchangeRateHint" Text="1 JOD = 1.4104372 USD (Fixed)" 
                             FontSize="12" Foreground="Gray" Margin="0,0,0,15"/>
                    
                    <!-- Form Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button x:Name="SaveBtn" Content="💾 Save" 
                              Background="#27ae60" Foreground="White" BorderThickness="0" 
                              Padding="15,10" Margin="0,0,10,0" FontWeight="SemiBold"
                              Click="Save_Click"/>
                        
                        <Button x:Name="CancelBtn" Content="❌ Cancel" 
                              Background="#6c757d" Foreground="White" BorderThickness="0" 
                              Padding="15,10" FontWeight="SemiBold"
                              Click="Cancel_Click"/>
                    </StackPanel>
                    
                    <!-- Exchange Rate Info Panel -->
                    <Border Background="#e3f2fd" BorderBrush="#2196f3" BorderThickness="1" 
                          CornerRadius="4" Padding="15" Margin="0,30,0,0">
                        <StackPanel>
                            <TextBlock Text="💡 Exchange Rate Information" FontWeight="SemiBold" 
                                     Foreground="#1976d2" Margin="0,0,0,10"/>
                            <TextBlock Text="• USD: Always 1.0 (base currency)" FontSize="12" Margin="0,0,0,3"/>
                            <TextBlock Text="• JOD: Fixed at 1.4104372 (auto-filled)" FontSize="12" Margin="0,0,0,3"/>
                            <TextBlock Text="• EGP: Enter current market rate" FontSize="12" Margin="0,0,0,3"/>
                            <TextBlock Text="• Rate = 1 [Currency] = X USD" FontSize="12" FontStyle="Italic" Foreground="Gray"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>