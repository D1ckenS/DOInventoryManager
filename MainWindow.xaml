<Window x:Class="DOInventoryManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DO Inventory Manager" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.Resources>
        <!-- No custom styles needed - using FluentStyles -->
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="30"/>
            <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Modern Header -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" 
                BorderBrush="{DynamicResource BorderSubtleBrush}" BorderThickness="0,0,0,1">
            <Grid Height="56">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Hamburger Menu and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                    <Button x:Name="HamburgerMenuBtn" 
                            Width="40" Height="40" 
                            Background="Transparent" 
                            BorderThickness="0"
                            Click="HamburgerMenu_Click"
                            ToolTip="Toggle Navigation">
                        <TextBlock Text="&#xE700;" 
                                 Style="{StaticResource FluentIconSmall}"
                                 Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </Button>
                    
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0,0,0">
                        <TextBlock Text="⛽" FontSize="20" 
                                 Foreground="{DynamicResource PrimaryBrandBrush}" 
                                 VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="DO Inventory Manager" 
                                 Style="{StaticResource HeadlineMediumTextStyle}" 
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

                <!-- Header Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                    <!-- Theme Toggle Button -->
                    <Button x:Name="ThemeToggleBtn"
                            Width="40" Height="32"
                            Style="{StaticResource FluentSecondaryButtonStyle}"
                            Margin="0,0,8,0"
                            Click="ThemeToggle_Click"
                            ToolTip="Toggle Theme">
                        <TextBlock Text="🌙" 
                                 FontSize="18"
                                 FontWeight="Bold"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 Foreground="{DynamicResource TextPrimaryBrush}"/>
                    </Button>
                    
                    <TextBlock x:Name="CurrentDateText" 
                             Style="{StaticResource CaptionTextStyle}"
                             VerticalAlignment="Center" 
                             Margin="0,0,16,0"/>
                             
                    <Button x:Name="GenerateReportBtn"
                            Content="📊 Generate Report" 
                            Style="{StaticResource FluentButtonStyle}"
                            Click="GenerateReport_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="NavigationColumn" Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Collapsible Navigation Panel -->
            <Border x:Name="NavigationPanel" 
                    Grid.Column="0" 
                    Background="{DynamicResource NavigationGradientBrush}" 
                    BorderBrush="{DynamicResource BorderSubtleBrush}" 
                    BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Navigation Header -->
                    <Border Grid.Row="0" Padding="16,20,16,12">
                        <TextBlock x:Name="NavigationTitle"
                                 Text="Navigation" 
                                 Style="{StaticResource TitleMediumTextStyle}"
                                 Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </Border>

                    <!-- Navigation Items -->
                    <ScrollViewer Grid.Row="1" 
                                VerticalScrollBarVisibility="Auto" 
                                HorizontalScrollBarVisibility="Hidden"
                                Padding="8,0">
                        <StackPanel>
                            <!-- Primary Navigation -->
                            <Button x:Name="DashboardBtn" 
                                    Style="{StaticResource ActiveNavigationButtonStyle}" 
                                    Click="Dashboard_Click">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE80F;" Style="{StaticResource FluentIconSmall}" Margin="0,0,12,0"/>
                                        <TextBlock x:Name="DashboardText" Text="Dashboard"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            
                            <Button x:Name="SuppliersBtn" 
                                    Style="{StaticResource NavigationButtonStyle}" 
                                    Click="Suppliers_Click">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE716;" Style="{StaticResource FluentIconSmall}" Margin="0,0,12,0"/>
                                        <TextBlock x:Name="SuppliersText" Text="Suppliers"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            
                            <Button x:Name="VesselsBtn" 
                                    Style="{StaticResource NavigationButtonStyle}" 
                                    Click="Vessels_Click">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE7B8;" Style="{StaticResource FluentIconSmall}" Margin="0,0,12,0"/>
                                        <TextBlock x:Name="VesselsText" Text="Vessels"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            
                            <Button x:Name="PurchasesBtn" 
                                    Style="{StaticResource NavigationButtonStyle}" 
                                    Click="Purchases_Click">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE7BF;" Style="{StaticResource FluentIconSmall}" Margin="0,0,12,0"/>
                                        <TextBlock x:Name="PurchasesText" Text="Purchase Entry"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            
                            <Button x:Name="ConsumptionBtn" 
                                    Style="{StaticResource NavigationButtonStyle}" 
                                    Click="Consumption_Click">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE73F;" Style="{StaticResource FluentIconSmall}" Margin="0,0,12,0"/>
                                        <TextBlock x:Name="ConsumptionText" Text="Consumption Entry"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            
                            <Button x:Name="TripsBtn" 
                                    Style="{StaticResource NavigationButtonStyle}" 
                                    Click="Trips_Click">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE909;" Style="{StaticResource FluentIconSmall}" Margin="0,0,12,0"/>
                                        <TextBlock x:Name="TripsText" Text="Trip Management"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            
                            <Button x:Name="AllocationBtn" 
                                    Style="{StaticResource NavigationButtonStyle}" 
                                    Click="Allocation_Click">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE8FD;" Style="{StaticResource FluentIconSmall}" Margin="0,0,12,0"/>
                                        <TextBlock x:Name="AllocationText" Text="Monthly Allocation"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            
                            <Button x:Name="SummaryBtn" 
                                    Style="{StaticResource NavigationButtonStyle}" 
                                    Click="Summary_Click">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE9A9;" Style="{StaticResource FluentIconSmall}" Margin="0,0,12,0"/>
                                        <TextBlock x:Name="SummaryText" Text="Reports"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>

                            <!-- Separator -->
                            <Border Height="1" 
                                  Background="{DynamicResource BorderSubtleBrush}" 
                                  Margin="12,16,12,8"/>

                            <!-- Utility Navigation -->
                            <Button x:Name="BackupBtn" 
                                    Style="{StaticResource NavigationButtonStyle}" 
                                    Click="Backup_Click">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE896;" Style="{StaticResource FluentIconSmall}" Margin="0,0,12,0"/>
                                        <TextBlock x:Name="BackupText" Text="Backup Management"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            
                            <Button x:Name="SettingsBtn" 
                                    Style="{StaticResource NavigationButtonStyle}" 
                                    Click="Settings_Click">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE713;" Style="{StaticResource FluentIconSmall}" Margin="0,0,12,0"/>
                                        <TextBlock x:Name="SettingsText" Text="Settings"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Navigation Footer -->
                    <Border Grid.Row="2" 
                          Padding="16,12,16,16"
                          BorderBrush="{DynamicResource BorderSubtleBrush}"
                          BorderThickness="0,1,0,0">
                        <TextBlock x:Name="NavigationFooter"
                                 Text="v1.0.0" 
                                 Style="{StaticResource CaptionTextStyle}"
                                 HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Content Area -->
            <Border Grid.Column="1" Background="{DynamicResource BackgroundBrush}">
                <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden" Padding="0"/>
            </Border>
        </Grid>

        <!-- Modern Status Bar -->
        <Border Grid.Row="2" 
                Background="{DynamicResource SubtleBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderSubtleBrush}" 
                BorderThickness="0,1,0,0"
                Height="28">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusText" 
                         Grid.Column="0" 
                         Text="Ready" 
                         Style="{StaticResource CaptionTextStyle}"
                         VerticalAlignment="Center" 
                         Margin="16,0"/>

                <StackPanel Grid.Column="1" 
                          Orientation="Horizontal" 
                          VerticalAlignment="Center">
                    <Ellipse Width="6" Height="6" 
                           Fill="{DynamicResource SuccessForegroundBrush}" 
                           Margin="0,0,6,0"/>
                    <TextBlock x:Name="DatabaseStatus" 
                             Text="Database Connected" 
                             Style="{StaticResource CaptionTextStyle}"
                             VerticalAlignment="Center" 
                             Margin="0,0,16,0"/>
                </StackPanel>

                <TextBlock x:Name="VersionText" 
                         Grid.Column="2" 
                         Text="v1.0.0" 
                         Style="{StaticResource CaptionTextStyle}"
                         VerticalAlignment="Center" 
                         Margin="0,0,16,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>