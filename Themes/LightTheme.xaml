<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light Theme Color Palette -->
    
    <!-- Primary Brand Colors -->
    <Color x:Key="PrimaryBrand">#0078D4</Color>
    <Color x:Key="PrimaryBrandHover">#106EBE</Color>
    <Color x:Key="PrimaryBrandPressed">#005A9E</Color>
    <Color x:Key="PrimaryBrandDisabled">#D2D0CE</Color>
    
    <!-- Secondary Brand Colors -->
    <Color x:Key="SecondaryBrand">#107C10</Color>
    <Color x:Key="TertiaryBrand">#881798</Color>
    <Color x:Key="AccentBrand">#D13438</Color>
    
    <!-- Neutral Grays -->
    <Color x:Key="Gray10">#FAF9F8</Color>
    <Color x:Key="Gray20">#F3F2F1</Color>
    <Color x:Key="Gray30">#EDEBE9</Color>
    <Color x:Key="Gray40">#E1DFDD</Color>
    <Color x:Key="Gray50">#D2D0CE</Color>
    <Color x:Key="Gray60">#C8C6C4</Color>
    <Color x:Key="Gray70">#A19F9D</Color>
    <Color x:Key="Gray80">#8A8886</Color>
    <Color x:Key="Gray90">#605E5C</Color>
    <Color x:Key="Gray100">#484644</Color>
    <Color x:Key="Gray110">#3B3A39</Color>
    <Color x:Key="Gray120">#323130</Color>
    <Color x:Key="Gray130">#292827</Color>
    <Color x:Key="Gray140">#201F1E</Color>
    <Color x:Key="Gray150">#16100F</Color>
    <Color x:Key="Gray160">#11100F</Color>
    
    <!-- Surface Colors -->
    <Color x:Key="Surface">#FFFFFF</Color>
    <Color x:Key="Background">#FAF9F8</Color>
    <Color x:Key="CardBackground">#FFFFFF</Color>
    <Color x:Key="SubtleBackground">#F3F2F1</Color>
    <Color x:Key="AlternatingRowBackground">#FAFAFA</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#201F1E</Color>
    <Color x:Key="TextSecondary">#605E5C</Color>
    <Color x:Key="TextTertiary">#8A8886</Color>
    <Color x:Key="TextDisabled">#A19F9D</Color>
    <Color x:Key="TextOnAccent">#FFFFFF</Color>
    
    <!-- Border Colors -->
    <Color x:Key="BorderSubtle">#E1DFDD</Color>
    <Color x:Key="BorderNeutral">#D2D0CE</Color>
    <Color x:Key="BorderStrong">#8A8886</Color>
    
    <!-- Status Colors -->
    <Color x:Key="SuccessBackground">#DFF6DD</Color>
    <Color x:Key="SuccessForeground">#107C10</Color>
    <Color x:Key="WarningBackground">#FFF4CE</Color>
    <Color x:Key="WarningForeground">#997700</Color>
    <Color x:Key="CautionForeground">#F7B801</Color>
    <Color x:Key="ErrorBackground">#FDE7E9</Color>
    <Color x:Key="ErrorForeground">#D13438</Color>
    <Color x:Key="CriticalForeground">#C50E20</Color>
    <Color x:Key="InfoBackground">#E7F3FF</Color>
    <Color x:Key="InfoForeground">#0078D4</Color>
    
    <!-- Convert Colors to Brushes -->
    
    <!-- Primary Brushes -->
    <SolidColorBrush x:Key="PrimaryBrandBrush" Color="{StaticResource PrimaryBrand}"/>
    <SolidColorBrush x:Key="PrimaryBrandHoverBrush" Color="{StaticResource PrimaryBrandHover}"/>
    <SolidColorBrush x:Key="PrimaryBrandPressedBrush" Color="{StaticResource PrimaryBrandPressed}"/>
    <SolidColorBrush x:Key="PrimaryBrandDisabledBrush" Color="{StaticResource PrimaryBrandDisabled}"/>
    
    <!-- Surface Brushes -->
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Surface}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackground}"/>
    <SolidColorBrush x:Key="SubtleBackgroundBrush" Color="{StaticResource SubtleBackground}"/>
    <SolidColorBrush x:Key="AlternatingRowBackgroundBrush" Color="{StaticResource AlternatingRowBackground}"/>
    
    <!-- Text Brushes -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextTertiary}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabled}"/>
    <SolidColorBrush x:Key="TextOnAccentBrush" Color="{StaticResource TextOnAccent}"/>
    
    <!-- Border Brushes -->
    <SolidColorBrush x:Key="BorderSubtleBrush" Color="{StaticResource BorderSubtle}"/>
    <SolidColorBrush x:Key="BorderNeutralBrush" Color="{StaticResource BorderNeutral}"/>
    <SolidColorBrush x:Key="BorderStrongBrush" Color="{StaticResource BorderStrong}"/>
    
    <!-- Status Brushes -->
    <SolidColorBrush x:Key="SuccessBackgroundBrush" Color="{StaticResource SuccessBackground}"/>
    <SolidColorBrush x:Key="SuccessForegroundBrush" Color="{StaticResource SuccessForeground}"/>
    <SolidColorBrush x:Key="WarningBackgroundBrush" Color="{StaticResource WarningBackground}"/>
    <SolidColorBrush x:Key="WarningForegroundBrush" Color="{StaticResource WarningForeground}"/>
    <SolidColorBrush x:Key="CautionForegroundBrush" Color="{StaticResource CautionForeground}"/>
    <SolidColorBrush x:Key="ErrorBackgroundBrush" Color="{StaticResource ErrorBackground}"/>
    <SolidColorBrush x:Key="ErrorForegroundBrush" Color="{StaticResource ErrorForeground}"/>
    <SolidColorBrush x:Key="CriticalForegroundBrush" Color="{StaticResource CriticalForeground}"/>
    <SolidColorBrush x:Key="InfoBackgroundBrush" Color="{StaticResource InfoBackground}"/>
    <SolidColorBrush x:Key="InfoForegroundBrush" Color="{StaticResource InfoForeground}"/>
    
    <!-- Gradient Brushes for Modern Effects -->
    <LinearGradientBrush x:Key="CardGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFFFFF" Offset="0"/>
        <GradientStop Color="#FCFCFC" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="NavigationGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#F8F8F8" Offset="0"/>
        <GradientStop Color="#F3F2F1" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Shadow Effects -->
    <DropShadowEffect x:Key="CardShadowEffect" 
                      Color="#10000000" 
                      BlurRadius="8" 
                      ShadowDepth="2" 
                      Direction="270"/>
    
    <DropShadowEffect x:Key="ElevatedShadowEffect" 
                      Color="#20000000" 
                      BlurRadius="16" 
                      ShadowDepth="4" 
                      Direction="270"/>
    
    <DropShadowEffect x:Key="SubtleShadowEffect" 
                      Color="#08000000" 
                      BlurRadius="4" 
                      ShadowDepth="1" 
                      Direction="270"/>

    <!-- Scrollbar Colors (Light Theme) -->
    <Color x:Key="ScrollBarTrack">#F8F8F8</Color>
    <Color x:Key="ScrollBarThumb">#C8C6C4</Color>
    <Color x:Key="ScrollBarThumbHover">#8A8886</Color>
    <Color x:Key="ScrollBarThumbPressed">#0078D4</Color>
    
    <!-- Scrollbar Brushes -->
    <SolidColorBrush x:Key="ScrollBarTrackBrush" Color="{StaticResource ScrollBarTrack}"/>
    <SolidColorBrush x:Key="ScrollBarThumbBrush" Color="{StaticResource ScrollBarThumb}"/>
    <SolidColorBrush x:Key="ScrollBarThumbHoverBrush" Color="{StaticResource ScrollBarThumbHover}"/>
    <SolidColorBrush x:Key="ScrollBarThumbPressedBrush" Color="{StaticResource ScrollBarThumbPressed}"/>

</ResourceDictionary>